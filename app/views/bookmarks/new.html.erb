<div class="playlist_title">
  <h1><%= @list.name.upcase %></h1>
</div>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to 'Back to the list', list_path(@list), class: " btn btn-warning" %>
<% end %>
